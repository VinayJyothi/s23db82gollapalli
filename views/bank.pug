extends layout
 
block content
  h1= title
  - let items = results;
 
  div(class="container-fluid")
    div(class="row m-1")
      each item in items
        - let destination = `dispatch("/bank/update?id=${item._id}")`
        div(class="row-sm-2 m-1") Item #{item.bank_name}(#{item.bank_account}) is #{item.bank_balance}
        button.btn(class="btn-primary ml-1", onclick=destination) Update
 
  script.
    function dispatch(path) {
      window.location.href = path;
    }



